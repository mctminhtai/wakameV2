    <script>
        document.querySelector('.scroll-top').setAttribute('href', location.href + '#');
    </script>
    <!-- Backend Bundle JavaScript -->
    <script src="javascripts/libs.min.js"></script>
    
    <!-- widgetchart JavaScript -->
    <script src="javascripts/charts/widgetcharts.js"></script>
    
    <!-- mapchart JavaScript -->
    <script src="javascripts/charts/vectore-chart.js"></script>
    <script src="javascripts/charts/dashboard.js"></script>
    
    <!-- fslightbox JavaScript -->
    <script src="javascripts/fslightbox.js"></script>
    
    <!-- settings JavaScript -->
    <script src="javascripts/setting.js"></script>
    
    <!-- Form Wizard Script -->
    <script src="javascripts/form-wizard.js"></script>
    
    <!-- app JavaScript -->
    <script src="javascripts/app.js"></script>