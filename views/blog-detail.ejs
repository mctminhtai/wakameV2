<%- contentFor('body') %>
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Blog Grid Sidebar</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="/">Home</a></li>
                    <li>Blog Grid Sidebar</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="section blog-single">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-12">
                <div class="single-inner">
                    <div class="post-details">
                        <div class="main-content-head">
                            <div class="meta-information">
                                <h2 class="post-title">
                                    <%= blog.title %>
                                </h2>

                                <ul class="meta-info">
                                    <li>
                                        <a href="javascript:void(0)">
                                            <%= blog.userId.fullName %>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)"><%= blog.dateCreated.getDate() + '/' + blog.dateCreated.getMonth() + '/' + blog.dateCreated.getFullYear() %></a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">
                                            <%= blog.category.name %>
                                        </a>
                                    </li>
                                </ul>

                            </div>
                            <div class="post-thumbnils">
                                <img src="<%= blog.thumbImg %>" alt="#">
                            </div>
                            <div class="detail-inner">
                                <%- blog.body %>
                            </div>
                        </div>
                    </div>
                </div>


                <% if (user) { %>
                    <div class="comment-form">
                        <h3 class="comment-reply-title">Đăng bình luận</h3>
                        <form action="" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-box form-group">
                                        <label>Nội dung bình luận</label>
                                        <textarea name="content" class="form-control form-control-custom"
                                            placeholder="Write your Comments"></textarea>
                                    </div>
                                </div>
                                <!-- <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-box form-group">
                                        <label>Your name</label>
                                        <input type="text" name="name" class="form-control form-control-custom" placeholder="Alex Deo">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-box form-group">
                                        <label>Email address</label>
                                        <input type="email" name="email" class="form-control form-control-custom"
                                            placeholder="example@gmail.com">
                                    </div>
                                </div> -->
                                <div class="col-12">
                                    <div class="button">
                                        <button type="submit" class="btn">Post Comment</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                <% } %>

                <div class="post-comments">
                    <% if(blog.comments) { %>

                        <h3 class="comment-title"><span><%= blog.comments.length %> Bình luận</span></h3>

                    <% } %>
                    <ul class="comments-list">
                        <% blog.comments.forEach((value,index)=>{ %>

                            <li>
                                <div class="comment-img">
                                    <img src="images/blog/comment1.jpg" alt="img">
                                </div>
                                <div class="comment-desc">
                                    <div class="desc-top">
                                        <h6><%= value.user.fullName %></h6>
                                        <span class="date"><%= value.dateCreated.getDate() + '/' + value.dateCreated.getMonth() + '/' + value.dateCreated.getFullYear() %></span>
                                        <!-- <a href="javascript:void(0)" class="reply-link"><i
                                                class="lni lni-reply"></i>Reply</a> -->
                                    </div>
                                    <p>
                                        <%= value.content %>
                                    </p>
                                </div>
                            </li>

                        <% }) %>
                        
                    </ul>
                </div>

                
                

            </div>
            <aside class="col-lg-4 col-md-12 col-12">
                <div class="sidebar">

                    
                    <%- include('partials/widget/search-widget') %>


                    <%- include('partials/widget/popular-feeds') %>

                    
                    <%- include('partials/widget/categories-widget') %>
                    
                    
                    <%- include('partials/widget/popular-tag-widget') %>                    
                    
                    

                </div>
            </aside>
        </div>
    </div>
</section>


