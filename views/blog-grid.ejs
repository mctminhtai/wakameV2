<%- contentFor('body') %>
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Blog Grid Sidebar</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="/">Home</a></li>
                    <li>Blog Grid Sidebar</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="section blog-grid-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-12">
                <div class="row">

                    <% blogs.forEach((value,index)=>{ %>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-blog-grid">
                                <div class="blog-img">
                                    <a href="blog/blog-detail/<%= value._id %>">
                                        <img src="images/blog/blog-1.jpg" alt="#">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <a class="category" href="javascript:void(0)">
                                        <%= value.category.name %>
                                    </a>
                                    <h4>
                                        <a href="blog/blog-detail/<%= value._id %>">
                                            <%= value.title.substring(0, 80)+"..." %>
                                        </a>
                                    </h4>
                                    <p>
                                        <%= value.description.substring(0, 100)+"..." %>
                                    </p>
                                    <a href="blog/blog-detail/<%= value._id %>" class="more-btn">Read Blog <i
                                            class="lni lni-arrow-right"></i></a>
                                </div>
                            </div>

                        </div>
                        <% }) %>
                </div>

                <div class="pagination left">
                    <ul class="pagination-list">
                        <li><a href="/blog?page=<%= pagination.currentPage - 1 %>">Prev</a></li>
                        <% for(let i = 1; i <= pagination.pageCount; i++){ %>
                            <% if(i==pagination.currentPage) { %>
                                <li class="active"><a href="/blog?page=<%= i %>"><%= i %></a></li>
                            <% }else{ %>
                                <li><a href="/blog?page=<%= i %>"><%= i %></a></li>
                            <% } %>
                        <% } %>
                        <li><a href="/blog?page=<%= Number(pagination.currentPage) + 1 %>">Next</a></li>
                    </ul>
                </div>

            </div>
            <aside class="col-lg-4 col-md-12 col-12">
                <div class="sidebar">
                
                
                    <%- include('partials/widget/search-widget') %>
                
                
                    <%- include('partials/widget/popular-feeds') %>
                
                
                    <%- include('partials/widget/categories-widget') %>
                
                
                    <%- include('partials/widget/popular-tag-widget') %>
                
                
                
                </div>
            </aside>
        </div>
    </div>
</section>


<div class="client-logo">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-3 col-12 text-center">
                <div class="single-logo">
                    <img src="images/client-logo/graygrids-logo.svg" alt="#">
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-12 text-center">
                <div class="single-logo">
                    <img src="images/client-logo/lineicons-logo.svg" alt="#">
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-12 text-center">
                <div class="single-logo">
                    <img src="images/client-logo/pagebulb-logo.svg" alt="#">
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-12 text-center">
                <div class="single-logo">
                    <img src="images/client-logo/uideck-logo.svg" alt="#">
                </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('stylesheet') %>
    <link rel="stylesheet" href="stylesheets/main.css">
<%- contentFor('customScript') %>
    <script>
        document.querySelector('.scroll-top').setAttribute('href',location.href+'#');
    </script>